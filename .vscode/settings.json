{
  "editor.foldingStrategy": "auto",
  "[typescript]": {
    "explicitFolding.rules": [
      {
        // logger.info／warn／error の開始を正規表現で検出
        "beginRegex": "^\\s*logger\\.(?:info|warn|error)\\b.*\\{\\s*$",
        "endRegex": "^\\s*\\}?\\);\\s*$",
        "autoFold": true
      }
    ]
  },

  "explicitFolding.delay": 1000,
  "explicitFolding.notification": "minor",
  "explicitFolding.debug": true
}
